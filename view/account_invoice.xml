<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Invoice form modifications -->
        <record id="view_account_invoice_form_finnish" model="ir.ui.view">
            <field name="name">account.invoice.form.finnish</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet[@string='Invoice']/group/group[2]/field[@name='date_invoice']" position="after">
                    <field name="date_delivered"/>
                </xpath>

            <field name="date_delivered" position="after">
                    <field name="invoice_number"/>
                    <field name="ref_number"/>
            </field>

            <xpath expr="//page[@string='Other Info']//group/field[@name='name']" position="after">
                    <field name="barcode_string"/>
            </xpath>

            </field>
        </record>
    </data>
</openerp>
